{
  "gateway": {
    "mode": "local"
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "${OPENCLAW_MODEL}"
      },
      "workspace": "/root/.openclaw/workspace"
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "allowlist",
      "allowFrom": ["${TELEGRAM_ALLOWED_CHAT_IDS}"]
    }
  },
  "tools": {
    "profile": "coding",
    "deny": [
      "Bash",
      "WebFetch",
      "WebSearch",
      "Task",
      "NotebookEdit"
    ]
  },
  "cron": {
    "enabled": true,
    "maxConcurrentRuns": 1
  }
}
